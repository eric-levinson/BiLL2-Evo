NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_DISPLAY_ENDPOINT_MODE=False
NEXT_PUBLIC_APP_URL=http://localhost:3000
# AI Provider API Keys (set the key for whichever provider you use)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_GENERATIVE_AI_API_KEY=your-google-api-key

# Model ID â€” supports any Vercel AI SDK provider model
# Claude:  claude-sonnet-4-5-20250929, claude-opus-4-5
# GPT:     gpt-4o, gpt-4o-mini
# Gemini:  gemini-2.0-flash, gemini-2.5-pro-preview-06-05
AI_MODEL_ID=claude-sonnet-4-5-20250929
MCP_SERVER_URL=http://localhost:8000/mcp/

# Dynamic tool filtering configuration
# Maximum number of MCP tools to load per query (default: 7)
# Reduces token usage by selecting only the most relevant tools via BM25 search
# For Claude: uses Anthropic's native Tool Search API
# For GPT/Gemini: uses client-side BM25 filtering in prepareStep callback
TOOL_SEARCH_MAX_RESULTS=7

# Retry configuration for failed tool calls
# Maximum number of retry attempts for failed MCP tool calls and external API requests (default: 3)
RETRY_MAX_ATTEMPTS=3
# Initial delay in milliseconds before first retry (default: 1000ms = 1s)
RETRY_INITIAL_DELAY_MS=1000
# Multiplier for exponential backoff (default: 2)
# Retry delays: 1s, 2s, 4s with default settings
RETRY_BACKOFF_MULTIPLIER=2

# Circuit breaker configuration for external service protection
# Number of consecutive failures before opening circuit breaker (default: 5)
CIRCUIT_BREAKER_THRESHOLD=5
# Time in milliseconds to wait before attempting to close circuit (default: 60000ms = 60s)
CIRCUIT_BREAKER_TIMEOUT_MS=60000
