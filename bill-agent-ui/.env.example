NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_DISPLAY_ENDPOINT_MODE=False
NEXT_PUBLIC_APP_URL=http://localhost:3000
# AI Provider API Keys (set the key for whichever provider you use)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_GENERATIVE_AI_API_KEY=your-google-api-key

# Model ID â€” supports any Vercel AI SDK provider model
# Claude:  claude-sonnet-4-5-20250929, claude-opus-4-5
# GPT:     gpt-4o, gpt-4o-mini
# Gemini:  gemini-2.0-flash, gemini-2.5-pro-preview-06-05
AI_MODEL_ID=claude-sonnet-4-5-20250929
MCP_SERVER_URL=http://localhost:8000/mcp/

# Dynamic tool filtering configuration
# Maximum number of MCP tools to load per query (default: 7)
# Reduces token usage by selecting only the most relevant tools via BM25 search
# For Claude: uses Anthropic's native Tool Search API
# For GPT/Gemini: uses client-side BM25 filtering in prepareStep callback
TOOL_SEARCH_MAX_RESULTS=7
